        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="20, 20, 20, 20" Width="627">
            <Button Background="DarkGreen" FontFamily="Calibri" FontSize="20" Height = "80" Width = "150" Margin = "30" Content = "4" GotMouseCapture="Button_GotMouseCapture" MouseDown="Button_MouseDown"/>
            <Button Background="Red" FontFamily="Calibri" FontSize="20" Height = "80" Width = "150" Margin = "30" Content = "5" GotMouseCapture="Button_GotMouseCapture" MouseDown="Button_MouseDown"/>
            <Button Background="Orange" FontFamily="Calibri" FontSize="20" Height = "80" Width = "150" Margin = "30" Content = "6" GotMouseCapture="Button_GotMouseCapture" MouseDown="Button_MouseDown"/>
        </StackPanel>
    </StackPanel>
    
</Window>
